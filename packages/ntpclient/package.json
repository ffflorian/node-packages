{
  "author": "Florian Imdahl <git@ffflorian.de>",
  "bin": "dist/cjs/cli.js",
  "dependencies": {
    "commander": "12.0.0"
  },
  "description": "A TypeScript implementation of the NTP Client Protocol",
  "devDependencies": {
    "rimraf": "5.0.5",
    "typescript": "5.4.4",
    "vitest": "1.4.0"
  },
  "engines": {
    "node": ">= 18.0"
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "license": "GPL-3.0",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "name": "ntpclient",
  "repository": "https://github.com/ffflorian/node-packages/tree/main/packages/ntpclient",
  "scripts": {
    "build": "yarn build:cjs && yarn build:esm && yarn generate:packagejson",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "dist": "yarn clean && yarn build",
    "generate:packagejson": "../../bin/generate-hybrid-package-json.sh",
    "start": "node --loader ts-node/esm src/cli.ts",
    "test": "vitest run"
  },
  "type": "module",
  "version": "1.6.3"
}
